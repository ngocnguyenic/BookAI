<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>BookCrud</servlet-name>
        <servlet-class>controller.Book.BookCrud</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AIServlet</servlet-name>
        <servlet-class>controller.AI.AIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookCrud</servlet-name>
        <url-pattern>/bookcrud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AIServlet</servlet-name>
        <url-pattern>/aiservlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
